<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/shapeImage"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:shape_roundRect_borderWidth="0.1dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivTour"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image" />

    </com.github.florent37.shapeofview.shapes.RoundRectView>


    <TextView
        android:id="@+id/tvPlaceName"
        android:layout_width="123dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="Sea World Ancol"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPilih"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_background"
        android:text="Choose Place"
        android:textAllCaps="false"
        android:textColor="#accae1"
        app:layout_constraintTop_toBottomOf="@+id/shapeImage" />

</androidx.constraintlayout.widget.ConstraintLayout>